<p id="notice"><%= notice %></p>

<h1>Plantillas</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th>Curso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plantillas.each do |plantilla| %>
      <tr>
        <td><%= plantilla.title %></td>
        <td><%= plantilla.summary %></td>
        <td><%= plantilla.curso_id %></td>
        <td><%= link_to 'Show', plantilla %></td>
        <td><%= link_to 'Edit', edit_plantilla_path(plantilla) %></td>
        <td><%= link_to 'Destroy', plantilla, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

